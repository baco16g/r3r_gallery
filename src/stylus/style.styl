@import 'reset.styl'
@import 'loader.styl'

#wrapper
	width 100vw
	height 100vh
	display flex
	align-items center
	justify-content center
	background-color #000
	&.is-white
		background-color #fff

#content
	width 600px
	height 600px
	@media only screen and (max-width: 760px)
		width 100vw
		height 100vw

	&.is-shadow
		box-shadow 10px 10px 10px rgba(0,0,0,0.4)
