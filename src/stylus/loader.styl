.loader,
.loader:before,
.loader:after
    background #515151
    -webkit-animation load1 1s infinite ease-in-out
    animation load1 1s infinite ease-in-out
    width 1em
    height 4em

.loader
    color #515151
    text-indent -9999em
    font-size 11px
    -webkit-transform translateZ(0)
    -ms-transform translateZ(0)
    transform translateZ(0)
    -webkit-animation-delay -0.16s
    animation-delay -0.16s
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    margin auto

    &:before
        left -1.5em
        -webkit-animation-delay -0.32s
        animation-delay -0.32s
    &:after
        left 1.5em

.loader:before,
.loader:after
    position absolute
    top 0
    content ''


@-webkit-keyframes load1 {
  0%,
  80%,
  100% {
    box-shadow: 0 0;
    height: 4em;
  }
  40% {
    box-shadow: 0 -2em;
    height: 5em;
  }
}
@keyframes load1 {
  0%,
  80%,
  100% {
    box-shadow: 0 0;
    height: 4em;
  }
  40% {
    box-shadow: 0 -2em;
    height: 5em;
  }
}
